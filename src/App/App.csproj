<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard1.6</TargetFramework>
    <PackageTargetFallback>portable-net45+win8+wpa81+wp8</PackageTargetFallback>
    <DebugType>full</DebugType>
  </PropertyGroup>

  <ItemGroup>
      <PackageReference Include="Acr.UserDialogs" Version="6.3.10" />
      <PackageReference Include="HockeySDK.Xamarin" Version="4.1.2" />
      <PackageReference Include="Newtonsoft.Json" Version="9.0.1" />
      <PackageReference Include="PCLCrypto" Version="2.0.147" />
      <PackageReference Include="Plugin.Fingerprint" Version="1.2.0" />
      <PackageReference Include="Splat" Version="1.6.2" />
      <PackageReference Include="sqlite-net-pcl" Version="1.2.1" />
      <PackageReference Include="System.Net.Requests" Version="4.3.0" />
      <PackageReference Include="Unity" Version="3.5.1405-prerelease" />
      <PackageReference Include="Xam.Plugin.Connectivity" Version="2.3.0" />
      <PackageReference Include="Xam.Plugin.PushNotification" Version="1.2.4" />
      <PackageReference Include="Xam.Plugins.Settings" Version="2.5.4" />
      <PackageReference Include="Xamarin.FFImageLoading.Forms" Version="2.2.9" />
      <PackageReference Include="Xamarin.Forms" Version="2.3.4.231" />
      <PackageReference Include="XLabs.IoC" Version="2.0.5782" />
  </ItemGroup>
  
  <ItemGroup>
    <!-- https://bugzilla.xamarin.com/show_bug.cgi?id=55591 -->
    <None Remove="**\*.xaml" />

    <Compile Update="**\*.xaml.cs" DependentUpon="%(Filename)" />
    <EmbeddedResource Include="**\*.xaml" SubType="Designer" Generator="MSBuild:UpdateDesignTimeXaml" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="AppResources.resx" Generator="ResXFileCodeGenerator" LastGenOutput="AppResources.Designer.cs" />
    <EmbeddedResource Update="AppResources.en-US.resx" Generator="ResXFileCodeGenerator" LastGenOutput="AppResources.en-US.Designer.cs" />
  </ItemGroup>
  
</Project>
