{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "lib": [
            "es6",
            "dom",
            "es2015.iterable"
        ],
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "app/*"
            ],
            "jslib/*": [
                "jslib/src/*"
            ],
            "@angular/*": [
                "node_modules/@angular/*"
            ],
            "angular2-toaster": [
                "node_modules/angular2-toaster"
            ],
            "angulartics2": [
                "node_modules/angulartics2"
            ],
            "*": [
                "./node_modules/tns-core-modules/*",
                "./node_modules/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "platforms",
        "hooks",
        "app/ios/ActionExtension",
        "jslib/node_modules",
        "jslib/spec",
        "jslib/src/electron"
    ]
}