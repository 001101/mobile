<Page class="page" navigatingTo="onNavigatingTo" 
    xmlns="http://schemas.nativescript.org/tns.xsd">
    <ActionBar class="action-bar" title="Bitwarden">
        <ActionItem tap="{{submit}}" text="Log In"></ActionItem>
    </ActionBar>
    <StackLayout>
        <Label text="Email"></Label>
        <TextField text="{{email}}" keyboardType="email" />
        <Label text="Master Password"></Label>
        <GridLayout columns="*, auto" rows="auto">
            <TextField text="{{masterPassword}}" col="0" secure="{{!showPassword}}" />
            <Button tap="{{togglePassword}}" col="1" class="fa" text="{{showPasswordIcon}}"></Button>
        </GridLayout>
    </StackLayout>
</Page>
